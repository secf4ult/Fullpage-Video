{
  "manifest_version": 3,
  "name": "Full Viewport Video",
  "version": "1.0",
  "description": "Turn videos on webpages into full viewport mode",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "run_at": "document_end",
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_icon": "assets/icon.png"
  }
}
